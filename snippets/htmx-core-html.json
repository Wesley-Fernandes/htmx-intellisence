{
  "hx-boost": {
      "prefix": "hx-boost",
      "body": [
          "hx-boost=\"${1:true}\""
      ],
      "description": [
          "adiciona ou remove o aprimoramento progressivo para links e formulários",
          "https://htmx.org/attributes/hx-boost/"
      ]
  },
  "hx-get": {
      "prefix": "hx-get",
      "body": [
          "hx-get=\"/${1:ENDPOINT}\""
      ],
      "description": [
          "Emite um `GET` para a URL especificada",
          "https://htmx.org/attributes/hx-get",
          "tipo: string?"
      ]
  },
  "hx-post": {
      "prefix": "hx-post",
      "body": [
          "hx-post=\"/${1:ENDPOINT}\""
      ],
      "description": [
          "emite um POST para a URL especificada",
          "https://htmx.org/attributes/hx-post/",
          "tipo: string?"
      ]
  },
  "hx-on": {
      "prefix": "hx-on",
      "body": [
          "hx-on:$01"
      ],
      "description": [
          "lida com eventos com scripts inline em elementos",
          "https://htmx.org/attributes/hx-on/"
      ]
  },
  "hx-push-url": {
      "prefix": "hx-push-url",
      "body": [
          "hx-push-url=\"${1:true}\""
      ],
      "description": [
          "insere a URL na barra de localização do navegador, criando uma nova entrada no histórico",
          "https://htmx.org/attributes/hx-push-url"
      ]
  },
  "hx-select": {
      "prefix": "hx-select",
      "body": [
          "hx-select=\"${01}\""
      ],
      "description": [
          "seleciona o conteúdo a ser trocado em uma resposta",
          "https://htmx.org/attributes/hx-select/"
      ]
  },
  "hx-select-oob": {
      "prefix": "hx-select-oob",
      "body": [
          "hx-select-oob=\"${01}\""
      ],
      "description": [
          "seleciona o conteúdo a ser trocado em uma resposta, fora da banda (em algum lugar diferente do alvo)",
          "https://htmx.org/attributes/hx-select-oob/"
      ]
  },
  "hx-swap": {
      "prefix": "hx-swap",
      "body": [
          "hx-swap=\"${01}\""
      ],
      "description": [
          "controla como o conteúdo é trocado (outerHTML, beforeend, afterend, …)",
          "https://htmx.org/attributes/hx-swap/"
      ]
  },
  "hx-swap-oob": {
      "prefix": "hx-swap-oob",
      "body": [
          "hx-swap-oob=\"${01}\""
      ],
      "description": [
          "controla como o conteúdo é trocado (outerHTML, beforeend, afterend, …), fora da banda (em algum lugar diferente do alvo)",
          "https://htmx.org/attributes/hx-swap-oob/"
      ]
  },
  "hx-target": {
      "prefix": "hx-target",
      "body": [
          "hx-target=\"${01}\""
      ],
      "description": [
          "especifica o elemento de destino a ser trocado",
          "https://htmx.org/attributes/hx-target/"
      ]
  },
  "hx-trigger": {
      "prefix": "hx-trigger",
      "body": [
          "hx-trigger=\"${01}\""
      ],
      "description": [
          "especifica o evento que dispara a requisição",
          "https://htmx.org/attributes/hx-trigger/"
      ]
  },
  "hx-vals": {
      "prefix": "hx-vals",
      "body": [
          "hx-vals='{\"${1:myVal$}\": \"${2:My Value}\"}'"
      ],
      "description": [
          "adiciona valores aos parâmetros a serem enviados com a requisição (formatado em JSON)",
          "https://htmx.org/attributes/hx-vals/"
      ]
  }
}